{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "allowJs": true,
    "noImplicitThis": true,
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "pretty": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "rc-ui-lib": ["src/index.tsx"],
      "rc-ui-lib/es/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "docs/**/*", "tests/**/*", "typings/**/*"],
  "exclude": ["tests/coverage/*", "tests/setup.js"]
}
